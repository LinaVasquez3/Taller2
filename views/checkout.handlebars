<section class="checkouta">
    <div class="checkouta__shineCheckout">
        <div class="checkouta__square">Checkout
            <hr class="checkouta__line">
        </div>
    </div>
</section>

<!--Alerta de error si no llena los espacios requeridos mostrará este error-->
