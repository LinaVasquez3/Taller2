<!--CLASE DE LA TIENDA-->

<body>

    {{!-- IMAGEN  --}}
    <section class="shopPic">
        <img class="shopPic__imagen" src="/img/img2/shop.jpeg" alt="">
    </section>

    <!--shop-->
    <section class="shop">
        <div class="shop__shineshop">
            <div class="shop__square">Shop
                <hr class="shop__line">
            </div>
        </div>
    </section>

    {{!-- FILTROS --}}
    <section class="content_product">

        <section class="filters">
            Filtros
            <!--<nav class="filters__product">
                Product
                <select class="filters__product1">
                    <option value="" disabled="true" selected="true">Choose an option</option>
                    <option value="shadows">Shadows</option>
                    <option value="lips">Lips</option>
                    <option value="skin">Skin</option>
                    <option value="mascara">Mascara</option>
                </select>
            </nav>-->

        </section>


        {{!-- PRODUCTOS --}}
        <!--PARA QUE SE VEAN LOS PRODUCTOS EN LA TIENDA-->
        <section>
            <!--Orders-->
            <nav class="orders">
                Ordinances
                <select class="orders__class">
                    <!--Menor-->
                    <option value="" disabled="true" selected="true">Choose an option</option>
                    <option value="16">Less than 16</option>
                    <option value="20">Less than 20</option>
                    <hr class="orders__classLineProduct">
                </select>
                <br>

            </nav>
            {{!-- lista de productos --}}
            <h2 class="list">List of products</h2>
            <main class="productList">
                {{#each products}}
                <!--recorrer el arreglo de producto-->
                <!--Un div es un producto-->
                <!--para que se vea la imagen y el precio de cada producto-->
                <div class="thumb">
                    <img class="thumb__img" src="{{ img }}" alt="">
                    <h1 class="thumb__tittle"> {{ tittle }} </h1>
                    <h3 class="thumb__name"> {{ name }}</h3>
                    <p class="thumb__rating">{{ rating }}</p>
                    <p class="thumb__number">{{ price }}</p>
                    <!--BUTTON PARA QUE LLEVE A LA PANTALLA DEL PRODUCTO EN ESPECIFICO-->
                    <div class="thumb__vibu">
                        <div class="thumb__vibuView">
                            <a href="/product/{{tittle}}/{{_id}}">View more</a>
                        </div>
                        <!--Add to car-->
                        <button class="thumb__vibuButton" data-img="{{ img }}" data-id="{{ _id }}"
                            data-name="{{ tittle }}" data-price="{{ price }}"> Add to car </button>
                    </div>
                </div>
                {{/each}}
            </main>
        </section>
    </section>
    <script src="/scripts/client.js"></script>
</body>

